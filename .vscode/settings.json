// Master_thesis/.vscode/settings.json
// These are the PROJECT settings for my master thesis repository.
{
    // ---- LaTeX Project Configuration ----
    "latex-workshop.latex.recipes": [
        {
            "name": "lualatexmk",
            "tools": [
                "lualatexmk"
            ]
        },
        {
            "name": "latexmk (PDF)",
            "tools": [
                "latexmk"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "lualatex",
            "command": "lualatex",
            "args": [
                "-shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "lualatexmk",
            "command": "latexmk",
            "args": [
                "-pdf",
                "-lualatex",
                "-shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ]
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ]
        }
    ],
    // ---- Language-Specific Formatting Rules for Consistency ----
    "[latex]": {
        "editor.defaultFormatter": "James-Yu.latex-workshop",
        "editor.formatOnSave": true,
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 80
    },
    "[bibtex]": {
        "editor.defaultFormatter": "James-Yu.latex-workshop"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    // ---- Python Project Configuration ----
    // Use relative paths so they work on any machine.
    "python.analysis.extraPaths": [
        "./code/python",
        "./code/python/scripts",
        "./code/python/qspectro2d"
    ],
    "python.analysis.diagnosticMode": "workspace",
